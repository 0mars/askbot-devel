{
  "name": "Askbot",
  "version": "none",
  "description": "Source files for the Askbot stylesheet",
  "main": "index.js",
  "author": "Evgeny Fadeev",
  "license": "GPLv3",
  "dependencies": {
    "bootstrap": "^4.1.3"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "clean-css-cli": "^4.2.1",
    "compass": "^0.1.1",
    "compass-mixins": "^0.12.10",
    "compass-sass-mixins": "^0.12.7",
    "node-sass": "^4.9.3",
    "postcss-cli": "^6.0.0",
    "stylelint": "^9.6.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.3.1",
    "watch": "^1.0.2"
  },
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ],
  "scripts": {
    "css:lint:fix": "stylelint --fix --config build/.stylelintrc --syntax scss \"scss/**/*.scss\" --cache --cache-location \"build/.stylelintcache/\"",
    "css:lint": "stylelint --config build/.stylelintrc --syntax scss \"scss/**/*.scss\" --cache --cache-location \"build/.stylelintcache/\"",
    "css:prefix": "postcss --config postcss.config.js build/style_unprefixed.css -o ../media/style/style.css",
    "css:compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/main.scss build/style_unprefixed.css",
    "css:minify": "cleancss --level 1 --source-map --source-map-inline-sources --output ../media/style//style.min.css ../media/style/style.css",
    "css": "yarn css:compile && yarn css:prefix && yarn css:minify",
    "css:watch": "watch 'yarn css' scss"
  }
}
